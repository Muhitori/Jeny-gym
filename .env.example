# Telegram Bot Configuration
# Get your bot tokens from @BotFather on Telegram

# Development bot token
TELEGRAM_BOT_TOKEN_DEV=your_development_bot_token_here

# Production bot token
TELEGRAM_BOT_TOKEN_PROD=your_production_bot_token_here

# Development endpoint (usually localhost for development)
TELEGRAM_ENDPOINT_DEV=http://localhost:3000

# Production endpoint (will be set after serverless deployment)
TELEGRAM_ENDPOINT_PROD=your_production_endpoint_here

# Environment mode (development or production)
NODE_ENV=development